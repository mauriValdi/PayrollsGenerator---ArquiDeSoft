<!DOCTYPE html>
<html>
	<head>
		<title>Employees</title>
		<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
	</head>
	<body>
		#foreach( $Employee in $Employees )
			<div>
				<div>
					<label>name: </label>
					$Employee.getName()
				</div>			
				<div>
					<label>Payment Classification: </label>
					$Employee.getPaymentClassificationString()
				</div>			
				<div>
					<form method='post' action='/ViewEmployee'>
						<input type='hidden' name='employeeId' value= $Employee.getId()>
						<input type='submit' class="w3-button w3-black w3-hover-aqua w3-block" value='Details'>
					</form>
				</div>
			</div>
			<br>
		#end
	</body>
</html>